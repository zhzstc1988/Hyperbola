<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.eclipsercp.hyperbola.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.eclipsercp.hyperbola.Perspective"
            icon="icons/chat.gif"
            id="org.eclipsercp.hyperbola.perspective"
            name="Hyperbola Perspective">
      </perspective>
      <perspective
            class="org.eclipsercp.hyperbola.PerspectiveDebug"
            icon="icons/dtdfile.gif"
            id="org.eclipsercp.hyperbola.debugperspective"
            name="Debug">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="org.eclipsercp.hyperbola.ContactsView"
            icon="icons/groups.gif"
            id="org.eclipsercp.hyperbola.views.contacts"
            name="Contacts">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.eclipsercp.hyperbola.ChatEditor"
            default="false"
            icon="icons/chat.gif"
            id="org.eclipsercp.hyperbola.editors.chat"
            name="Chat">
      </editor>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.jivesoftware.smack.RosterGroup"
            class="org.eclipsercp.hyperbola.AdapterFactory">
         <adapter
               type="org.eclipse.ui.model.IWorkbenchAdapter">
         </adapter>
      </factory>
      <factory
            adaptableType="org.jivesoftware.smack.RosterEntry"
            class="org.eclipsercp.hyperbola.AdapterFactory">
         <adapter
               type="org.eclipse.ui.model.IWorkbenchAdapter">
         </adapter>
      </factory>
      <factory
            adaptableType="org.jivesoftware.smack.Roster"
            class="org.eclipsercp.hyperbola.AdapterFactory">
         <adapter
               type="org.eclipse.ui.model.IWorkbenchAdapter">
         </adapter>
      </factory>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipsercp.hyperbola.application"
            name="Hyperbola Chat Client">
         <property
               name="appName"
               value="Hyperbola Chat Client">
         </property>
         <property
               name="windowImages"
               value="icons/alt16.gif,icons/alt32.gif">
         </property>
         <property
               name="preferenceCustomization"
               value="preferences.ini">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.eclipsercp.hyperbola.GeneralPreferencePage"
            id="org.eclipsercp.hyperbola.preferences.general"
            name="General">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.eclipsercp.hyperbola.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            description="Hyperbola Commands"
            id="org.eclipsercp.hyperbola.commands"
            name="Hyperbola">
      </category>
      <command
            categoryId="org.eclipsercp.hyperbola.commands"
            description="Add a contact to thte selected contact group"
            id="org.eclipsercp.hyperbola.addContact"
            name="Add Contact">
      </command>
      <command
            categoryId="org.eclipsercp.hyperbola.commands"
            description="Start chatting"
            id="org.eclipsrcp.hyperbola.chat"
            name="Chat">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.eclipsercp.hyperbola.addContact"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipsercp.hyperbola.keyConfig"
            sequence="M1+A">
      </key>
      <key
            commandId="org.eclipsrcp.hyperbola.chat"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipsercp.hyperbola.keyConfig"
            sequence="M1+U">
      </key>
      <key
            commandId="org.eclipse.ui.file.exit"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipsercp.hyperbola.keyConfig"
            sequence="M1+Q">
      </key>
      <scheme
            description="Keys for Hyperbola"
            id="org.eclipsercp.hyperbola.keyConfig"
            name="Hyperbola Keys">
      </scheme>
   </extension>n>

</plugin>
